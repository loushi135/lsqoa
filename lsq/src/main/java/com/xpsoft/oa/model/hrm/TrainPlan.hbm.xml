<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.xpsoft.oa.model.hrm.TrainPlan"
        table="train_plan"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="id"
            column="id"
            type="java.lang.Long"
            length="19"
        >
            <generator class="native"/>
        </id>
        <property
            name="sn"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="sn"
            length="20"
            not-null="false"
            unique="false"
        />
         <many-to-one
			name="trainCourse"
			class="com.xpsoft.oa.model.hrm.TrainCourse"
            not-null="false"
			fetch="join"
		>	
		<column name="trainCourseId" />
		</many-to-one>
       
        <property
            name="trainTime"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="trainTime"
            length="19"
            not-null="false"
            unique="false"
        />
        <property
            name="trainStatus"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="trainStatus"
            length="20"
            not-null="false"
            unique="false"
        />
        <property
            name="trainType"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="trainType"
            length="20"
            not-null="false"
            unique="false"
        />
        <property
            name="sumNum"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="sumNum"
            length="10"
            not-null="false"
            unique="false"
        />
          <property
            name="cancelReason"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="cancelReason"
            length="20"
            not-null="false"
            unique="false"
        />
          <property
            name="trainPlanPlace"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="trainPlanPlace"
            length="20"
            not-null="false"
            unique="false"
        />
        <property
            name="trainTarget"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="trainTarget"
            length="20"
            not-null="false"
            unique="false"
        />
     </class>
</hibernate-mapping>
