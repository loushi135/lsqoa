<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.xpsoft.oa.model.bbs.BbsTopic"
        table="bbs_Topic"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="id"
            column="id"
            type="java.lang.Long"
            length="19"
        >
            <generator class="native"/>
        </id>
         <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="title"
            length="128"
            not-null="false"
            unique="false"
        />
         <property
            name="topId"
            type="java.lang.Long"
            update="true"
            insert="true"
            access="property"
            column="topId"
            length="19"
            not-null="false"
            unique="false"
        />
        <property
            name="publishTime"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="publishTime"
            length="19"
            not-null="false"
            unique="false"
        />
        <property
            name="lastUpdateTime"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="lastUpdateTime"
            length="19"
            not-null="false"
            unique="false"
        />
        <property
            name="viewCount"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="viewCount"
            length="10"
            not-null="false"
            unique="false"
        />
        <property
            name="isTop"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="isTop"
            length="10"
            not-null="false"
            unique="false"
        />
        <property
            name="isPrime"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="isPrime"
            length="10"
            not-null="false"
            unique="false"
        />
        <property
            name="isLock"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="isLock"
            length="10"
            not-null="false"
            unique="false"
        />
        <property
            name="isReply"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="isReply"
            length="10"
            not-null="false"
            unique="false"
        />
         <many-to-one
			name="user"
			class="com.xpsoft.oa.model.system.AppUser"
            not-null="false"
			fetch="join"
		   >	
	   		 <column name="userId" />
		 </many-to-one>
        <property
            name="content"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="content"
            length="65535"
            not-null="false"
            unique="false"
        />
          <many-to-one
			name="group"
			class="com.xpsoft.oa.model.bbs.BbsGroup"
            not-null="false"
			fetch="join"
		   >	
	   		 <column name="groupId" />
		 </many-to-one>
       
     </class>
</hibernate-mapping>
