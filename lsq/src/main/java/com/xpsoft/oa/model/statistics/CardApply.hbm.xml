<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.xpsoft.oa.model.statistics.CardApply"
        table="card_apply"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="cardId"
            column="cardId"
            type="java.lang.Long"
            length="19"
        >
            <generator class="native"/>
        </id>
         <property
            name="cardProposer"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="cardProposer"
            length="120"
            not-null="true"
            unique="false"
        />
        <property
            name="phone"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="phone"
            length="80"
            not-null="false"
            unique="false"
        />
        <property
            name="companyName"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="companyName"
            length="120"
            not-null="false"
            unique="false"
        />
        <property
            name="fax"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="fax"
            length="80"
            not-null="true"
            unique="false"
        />
         <many-to-one name="dept"
         class="com.xpsoft.oa.model.system.Department" 
         not-null="false"
         fetch="join">
        	<column name="deptId"></column>
        </many-to-one>
        
        <property
            name="mobile"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="mobile"
            length="40"
            not-null="false"
            unique="false"
        />
        <property
            name="position"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="position"
            length="120"
            not-null="false"
            unique="false"
        />
        <!-- property
            name="postalCode"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="postalCode"
            length="10"
            not-null="true"
            unique="false"
        /> -->
        <property
            name="email"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="Email"
            length="120"
            not-null="false"
            unique="false"
        />
        <property
            name="other"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="other"
            length="65535"
            not-null="false"
            unique="false"
        />
        <property
            name="amount"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="amount"
            length="10"
            not-null="false"
            unique="false"
        />
        <property
            name="type"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="type"
            length="80"
            not-null="false"
            unique="false"
        />
        <property
            name="timeCreate"
            type="java.util.Date"
            update="false"
            insert="true"
            access="property"
            length="19"
            column="timeCreate"
            not-null="false"
            unique="false"
        />
        <property
            name="isType"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="isType"
            length="10"
            not-null="false"
            unique="false"
        />
         <property
            name="processRunId"
            type="java.lang.Long"
            update="false"
            insert="true"
            access="property"
            column="processRunId"
            length="19"
            not-null="false"
            unique="false"
        />
        <set name="cardFiles"
	     table="card_file"
	     lazy="true"
	     inverse="false"
	     cascade="save-update"
	     sort="unsorted"
		>
		<key>
			<column name="cardId"/>
		</key>
		<many-to-many fetch="join" class="com.xpsoft.oa.model.system.FileAttach" column="fileId"/>
	</set>
     </class>
</hibernate-mapping>
